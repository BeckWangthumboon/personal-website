---
import "../styles/global.css";

const GITHUB_LINK = "https://github.com/BeckWangthumboon";
const LINKEDIN_LINK =
  "https://www.linkedin.com/in/paripon-beck-wangthumboon-34b9ba293";

const projects = [
  {
    title: "Project 01",
    description: "Placeholder text for your first project block.",
    href: "https://github.com",
  },
  {
    title: "Project 02",
    description: "Placeholder text for your second project block.",
    href: "https://github.com",
  },
  {
    title: "Like my work? Hire me! ->",
    href: LINKEDIN_LINK,
  },
];

const contacts = [
  { label: "GitHub", href: GITHUB_LINK },
  { label: "LinkedIn", href: LINKEDIN_LINK },
  //{ label: 'X', href: 'https://x.com' },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Beck Wangthumboon</title>
  </head>
  <body class="theme-cobalt-dark code-bg bg-bg text-fg">
    <main
      class="mx-auto flex min-h-screen w-full max-w-3xl flex-col px-6 py-10 sm:px-10"
    >
      <header class="mb-10">
        <h1 class="mt-3 text-4xl tracking-tight sm:text-5xl">
          Beck Wangthumboon
        </h1>
      </header>

      <section class="flex-1">
        <ul class="space-y-3">
          {
            projects.map((project, index) => (
              <li>
                <a
                  href={project.href}
                  class="group block rounded-card border border-line bg-panel px-5 py-4 shadow-card transition hover:-translate-y-0.5 hover:border-accent focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent"
                >
                  <div class="flex items-baseline justify-between gap-4" />
                  <h2 class="mt-2 text-xl">{project.title}</h2>
                  <p class="mt-2 text-sm leading-relaxed text-muted">
                    {project.description}
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>

      <footer class="mt-12 border-t border-line pt-6">
        <ul class="flex flex-wrap gap-x-5 gap-y-3 text-sm">
          {
            contacts.map((contact) => (
              <li>
                <a href={contact.href} class="text-muted hover:text-accent">
                  {contact.label}
                </a>
              </li>
            ))
          }
        </ul>
      </footer>
    </main>
  </body>
</html>
